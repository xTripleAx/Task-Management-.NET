@model TaskManagement.Models.Comment

@{
    ViewData["Title"] = "CommentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CommentForm</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save" asp-controller="Comment" class="needs-validation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueId" class="control-label"></label>
                <select asp-for="IssueId" class ="form-control" asp-items="ViewBag.IssueId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CommentorId" class="control-label"></label>
                <select asp-for="CommentorId" class ="form-control" asp-items="ViewBag.CommentorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
