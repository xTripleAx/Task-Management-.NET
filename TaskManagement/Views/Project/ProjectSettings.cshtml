@model TaskManagement.Models.ViewModels.BaseViewModel

@{
    ViewData["Title"] = "Project Settings";
    Layout = "_ProjectElementsLayout";
}

<style>
    .scrollcontainer {
        max-height: 87.3vh;
        overflow-y: scroll;
    }
</style>

<div class="container mt-2">
    <div>
        <h2 class="mb-4">Project Settings</h2>

        <form asp-action="Save" asp-controller="Project" method="post">

            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Project.Name" class="control-label">Project Name:</label>
                <input asp-for="Project.Name" class="form-control" />
                <span asp-validation-for="Project.Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Project.Description" class="control-label">Project Description:</label>
                <textarea asp-for="Project.Description" class="form-control" rows="1"></textarea>
                <span asp-validation-for="Project.Description" class="text-danger"></span>
            </div>

            <input asp-for="Project.ProjectId" />

            <button type="submit" class="btn btn-primary mt-3">Save Changes</button>

        </form>

        <div class="mt-4">

            <h3 class="mb-3">Danger Zone</h3>

            <p class="mb-4">If you proceed, the project will be permanently deleted.</p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="Project.ProjectId" id="IdDelete" />
                <button type="button" class="btn btn-danger" onclick="handleDelete()">Delete Project</button>
            </form>

        </div>
    </div>
</div>

<script src="~/MyFiles/js/ProjectSettings.js"></script>