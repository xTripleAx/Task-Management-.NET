@model Project


@if (Model.ProjectType.ProjecTypetName == "Kanban")
{
    <!-- Sidebar Header -->
    <div class="sidebar-header text-center m-3">
        <h5 class="text-dark-emphasis">@Model.Name</h5>
    </div>

    <!-- Sidebar Links -->
    <nav class="nav flex-column">
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Board/KanbanBoard/@Model.ProjectId">
            <i class="fa-solid fa-clapperboard"></i> Board
        </a>
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Backlog/KanbanBacklog/@Model.ProjectId">
            <i class="fas fa-layer-group"></i> Backlog
        </a>
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Project/ProjectMembers/@Model.ProjectId">
            <i class="fas fa-plus"></i> Add Members
        </a>
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Project/ProjectSettings/@Model.ProjectId">
            <i class="fas fa-gear"></i> Settings
        </a>
    </nav>
}
else
{
    <!-- Sidebar Header -->
    <div class="sidebar-header text-center m-3">
        <h5 class="text-dark-emphasis">Your Sidebar</h5>
    </div>

    <!-- Sidebar Links -->
    <nav class="nav flex-column">
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Board/ScrumBoard/@Model.ProjectId">
            <i class="fa-solid fa-clapperboard"></i> Board
        </a>
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Backlog/ScrumBacklog/@Model.ProjectId">
            <i class="fas fa-layer-group"></i> Backlog
        </a>
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Project/ProjectMembers/@Model.ProjectId">
            <i class="fas fa-plus"></i> Add Members
        </a>
        <a class="nav-link bg-body text-light rounded-2 my-2" href="/Project/ProjectSettings/@Model.ProjectId">
            <i class="fas fa-gear"></i> Settings
        </a>
    </nav>
}